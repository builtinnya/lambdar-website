    name Text
    UniqueLangName name
    Primary slug
Article
    lang Text
    slug Text
    title Text
    created UTCTime default=CURRENT_TIME
    updated UTCTime default=CURRENT_TIME
    views Int default=0
    content Html
    UniqueArticle lang slug
    Primary lang slug
    Foreign Language fklang lang
